<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.MainController</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>seance</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.SeanceController</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>seance</servlet-name>
        <url-pattern>/seance</url-pattern>

    </servlet-mapping>
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.CartController</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>report</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.ReptController</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>report</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>

    <!--filters-->
    <filter>
        <filter-name>security</filter-name>
        <filter-class>by.gsu.epamlab.filters.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>security</filter-name>
        <servlet-name>main</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>registr</filter-name>
        <filter-class>by.gsu.epamlab.filters.FilterRegistration</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>registr</filter-name>
        <servlet-name>registration</servlet-name>
    </filter-mapping>
    <filter>
        <filter-name>courier</filter-name>
        <filter-class>by.gsu.epamlab.filters.CourierFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>courier</filter-name>
        <servlet-name>report</servlet-name>
    </filter-mapping>



    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/PullDAO</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>

